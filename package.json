{
    "name": "autobindle",
    "displayName": "autobindle",
    "description": "Provides Bindle registry services to VS Code projects and extensions",
    "version": "0.0.1",
    "repository": {
        "url": "https://github.com/fermyon/autobindle"
    },
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:autobindle.start",
        "onCommand:autobindle.stop",
        "onCommand:autobindle.switch",
        "onCommand:autobindle.new",
        "onCommand:autobindle.newInFolder"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "autobindle.start",
                "category": "Bindle",
                "title": "Start"
            },
            {
                "command": "autobindle.stop",
                "category": "Bindle",
                "title": "Stop"
            },
            {
                "command": "autobindle.switch",
                "category": "Bindle",
                "title": "Switch Environment"
            },
            {
                "command": "autobindle.new",
                "category": "Bindle",
                "title": "New Environment"
            },
            {
                "command": "autobindle.newInFolder",
                "category": "Bindle",
                "title": "New Environment in Chosen Folder"
            }
        ],
        "configuration": {
            "properties": {
                "autobindle.port": {
                    "type": "integer",
                    "default": 8080
                },
                "autobindle.environments": {
                    "scope": "machine",
                    "type": "array",
                    "items": {
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "storagePath": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "storagePath"
                        ]
                    }
                },
                "autobindle.activeEnvironment": {
                    "type": "string"
                }
            }
        }
    },
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": "limited",
            "description": "Untrusted projects may not specify their own environments",
            "restrictedConfigurations": [
                "autobindle.activeEnvironment",
                "autobindle.environments"
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mkdirp": "^1.0.2",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/tar": "^6.1.1",
        "@types/tmp": "^0.2.3",
        "@types/vscode": "^1.63.0",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "@vscode/test-electron": "^2.0.3",
        "eslint": "^8.6.0",
        "glob": "^7.2.0",
        "mocha": "^9.1.3",
        "ts-loader": "^9.2.6",
        "typescript": "^4.5.4",
        "webpack": "^5.66.0",
        "webpack-cli": "^4.9.1"
    },
    "dependencies": {
        "download": "^8.0.0",
        "mkdirp": "^1.0.4",
        "tar": "^6.1.11",
        "tmp": "^0.2.1"
    }
}
